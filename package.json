{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/cli": "^1.47.1",
    "axios": "^0.19.0",
    "bootstrap": "^4.3.1",
    "nodemailer": "^6.3.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "react": "^16.9.0",
    "react-bootstrap": "^1.0.0-beta.12",
    "react-dom": "^16.9.0",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1"
  },
  "devDependencies": {
    "netlify-lambda": "^1.4.5",
    "prettier": "1.18.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run build:lambda",
    "build:lambda": "netlify-lambda build src/lambda",
    "prettier": "prettier --write 'src/**/*{.ts,.tsx,js}'",
    "test": "react-scripts test",
    "sentry_release": "sentry-cli releases new --finalize -p jtco-static $COMMIT_REF && sentry-cli releases set-commits --commit \"jtco-io / jtco.io@$COMMIT_REF\" $COMMIT_REF && sentry-cli releases -p jtco-static files $COMMIT_REF upload-sourcemaps dist && sentry-cli releases deploys $COMMIT_REF new -e $ENVIRONMENT",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
